{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
       {
          "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
          "headers" : [ {
                        "key" : "Access-Control-Allow-Origin",
                        "value" : "https://bizrec-dev.firebaseapp.com"
                      } ]
        },
        {
          "source" : "**/*.@(jpg|jpeg|gif|png)",
          "headers" : [ {
                        "key" : "Cache-Control",
                        "value" : "max-age=7200"
                        } ]
        },
        {
          "source" : "404.html",
          "headers" : [ {
                        "key" : "Cache-Control",
                        "value" : "max-age=300"
                        } ]
        }
      ]
  }
}
